{
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es2017", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "composite": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@trading-app/logging": ["../logging/src"],
        "@trading-app/storage": ["../storage/src"]
      }
    },
    "references": [
      { "path": "../logging" },
      { "path": "../storage" }
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }