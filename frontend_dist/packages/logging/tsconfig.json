{
    "compilerOptions": {
      "target": "es2017",
      "lib": ["dom", "es2017"],
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@trading-app/config": ["../config/src"]
      }
    },
    "references": [
      { "path": "../config" }
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }